<package>
  <name>msl_refbox</name>
  <version>0.0.1</version>
  <description>msl_refbox provides a GUI plugin sending MSL Referee Box Commands.</description>
  <maintainer email="opfer@vs.uni-kassel.de">Stephan Opfer</maintainer>

  <license>MIT</license>

  <author>Stephan Opfer</author>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>rqt_gui</build_depend>
  <build_depend>msl__sensor_msgs</build_depend>
  <build_depend>msl_msgs</build_depend>
  <build_depend>alica_ros_proxy</build_depend>
  <build_depend>rqt_gui_cpp</build_depend>
  
  <run_depend>rqt_gui</run_depend>
  <run_depend>msl_msgs</run_depend>
  <run_depend>alica_ros_proxy</run_depend>
  <run_depend>msl_sensor_msgs</run_depend>
  <run_depend>rqt_gui_cpp</run_depend>

  <export>
    <rqt_gui plugin="${prefix}/plugin.xml"/>
  </export>
</package>
