<!-- Launch in the camera namespace containing "image_raw" and "camera_info" -->
<launch>


  <!-- Debayered images -->
  <node pkg="nodelet" type="nodelet" name="nodelet_manager"
        args="manager"
	/>
  <node pkg="nodelet" type="nodelet" name="nodelet1"
        args="load carpet_calibrator/CarpetCalibratorNodelet nodelet_manager"
	 />

  <!-- Monochrome rectified image -->
  <node pkg="nodelet" type="nodelet" name="camera1394"
        args="standalone camera1394/driver">
        
    <param name="video_mode" value="640x480_yuv422" />
	</node>

</launch>